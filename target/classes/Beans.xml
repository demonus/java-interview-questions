<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="Token" class="com.test.spring.Token" init-method="init">
        <property name="id" value="123456789"/>
    </bean>

    <bean id="Sample" class="com.test.spring.SampleClass" init-method="init">
        <property name="message" value="Hello World!"/>
        <property name="token">
            <ref bean="Token"/>
        </property>
    </bean>


    <bean id="Child" class="com.test.spring.SampleClassChild" init-method="init" parent="Sample">
        <property name="message2"><null/></property>

        <property name="token">
            <ref bean="Token"/>
        </property>

        <property name="addresses">
            <list>
                <value>New York, NY</value>
                <ref bean="Address"/>
            </list>
        </property>

    </bean>

    <bean id="Address" class="com.test.spring.Address">
        <property name="zip" value="94566"/>
        <property name="street" value="3354 Smoketree Commons drive"/>
    </bean>


    <bean class="com.test.spring.InitBean"/>


</beans>